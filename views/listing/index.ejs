<%- layout("/layouts/boilerplate") %>

  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      margin-top: 1rem;
      align-items: center;
    }
    .filter{
      text-align: center;
      margin-right: 2rem;
      margin-top:2rem;
      opacity: 0.7;
    }
    .filter p{
      font-size: 0.8rem;
    }
    .filter:hover{
      opacity: 1;
      cursor: pointer;
    }
    .tax-info{
      display: none;
    }
    .tax-toggle{
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.25rem;
      padding: 1rem;
      margin-left: 2rem;
      display: flex;
      align-items: center;
      opacity: 0.8;
    }
    .tax-toggle:hover{
      opacity: 1;
      cursor: pointer;
    }
  </style>


  <body>
    <!-- <h1>All Listings</h1> -->
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i> </div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i> </div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i> </div>
        <p>Iconic Cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i> </div>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome-alt"></i> </div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beaches</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-leaf"></i></div>
        <p>Forests</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Artic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </div>

      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
        </div>
      </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% for(let listing of allLists) { %>
        <a href="/listings/<%=listing._id%>" class="listing-link">
          <div class="card col listing-card">
            <img style="height: 20rem;" class="card-img-top" src="<%=listing.image.url %> " alt="Card image ">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text"> <b>
                  <%=listing.title%>
                </b> <br>
                &#8377; <%=listing.price.toLocaleString("en-IN")%>/night
                <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
              </p>
            </div>
          </div>
        </a>
      <% } %>
      </div>
      </body>
      
<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    let taxSwitch = document.querySelector("#flexSwitchCheckDefault");
    let taxInfo = document.querySelectorAll(".tax-info");

    // Function to toggle tax info display
    function toggleTaxInfo() {
      for (let tax of taxInfo) {
        if(taxSwitch.checked) {
          tax.style.display = "inline";
        } else {
          tax.style.display = "none";
        }
      }
    }

    // Set initial state based on switch state
    toggleTaxInfo();

    // Add event listener for changes
    taxSwitch.addEventListener("change", toggleTaxInfo);
  });
</script>